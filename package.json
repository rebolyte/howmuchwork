{
	"name": "typescript-preact",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"predev": "node ./scripts/prebuild.js --env Development",
		"dev": "webpack --mode development --env.NODE_ENV=development --env.APP_ENV=development",
		"watch": "webpack --mode development --env.NODE_ENV=development --env.APP_ENV=development --watch",
		"prestart": "yarn predev",
		"start": "webpack-dev-server --mode development --env.NODE_ENV=development --env.APP_ENV=development",
		"prebuild": "node ./scripts/prebuild.js --env Production",
		"build": "webpack --mode production --env.NODE_ENV=production --env.APP_ENV=production",
		"fmt": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css}\" --loglevel warn",
		"lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\" && stylelint \"src/**/*.css\""
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn fmt && yarn lint"
		}
	},
	"devDependencies": {
		"@types/classnames": "^2.2.7",
		"@types/lodash-es": "^4.17.3",
		"@types/node": "^12.7.2",
		"@typescript-eslint/eslint-plugin": "^2.0.0",
		"@typescript-eslint/parser": "^2.0.0",
		"autoprefixer": "^9.5.1",
		"clean-webpack-plugin": "^3.0.0",
		"css-loader": "^3.2.0",
		"eslint": "^6.2.1",
		"eslint-config-prettier": "^6.1.0",
		"eslint-config-standard": "^14.0.0",
		"eslint-plugin-import": "^2.17.2",
		"eslint-plugin-jsx-a11y": "^6.2.1",
		"eslint-plugin-node": "^9.0.1",
		"eslint-plugin-prettier": "^3.0.1",
		"eslint-plugin-promise": "^4.1.1",
		"eslint-plugin-react": "^7.13.0",
		"eslint-plugin-react-hooks": "^1.6.0",
		"eslint-plugin-standard": "^4.0.0",
		"html-webpack-plugin": "^3.2.0",
		"husky": "^3.0.4",
		"mini-css-extract-plugin": "^0.8.0",
		"optimize-css-assets-webpack-plugin": "^5.0.1",
		"postcss-cli": "^6.1.2",
		"postcss-import": "^12.0.1",
		"postcss-loader": "^3.0.0",
		"postcss-nested": "^4.1.2",
		"prettier": "^1.17.0",
		"purgecss-webpack-plugin": "^1.5.0",
		"style-loader": "^1.0.0",
		"stylelint": "^10.0.1",
		"stylelint-config-standard": "^18.3.0",
		"terser-webpack-plugin": "^1.2.3",
		"ts-loader": "^6.0.4",
		"typescript": "^3.4.5",
		"url-loader": "^2.1.0",
		"webpack": "^4.39.2",
		"webpack-cli": "^3.3.7",
		"webpack-dev-server": "^3.8.0"
	},
	"dependencies": {
		"classnames": "^2.2.6",
		"date-fns": "^2.0.0",
		"inject-css": "^0.2.1",
		"lodash-es": "^4.17.21",
		"microtip": "^0.2.2",
		"mobx": "^5.13.0",
		"mobx-preact": "^3.0.0",
		"mobx-utils": "^5.4.0",
		"preact": "^10.0.0-rc.1",
		"preact-router": "^3.0.1",
		"randomcolor": "^0.5.4",
		"tailwindcss": "^1.1.2",
		"wretch": "^1.5.2"
	}
}
